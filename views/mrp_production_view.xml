<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <!-- Tree View of product moves -->
        <record id="view_move_line_tree" model="ir.ui.view">
            <field name="name">stock.move.line.tree</field>
            <field name="model">stock.move.line</field>
            <field name="arch" type="xml">
                <tree decoration-muted="state == 'cancel'" decoration-danger="(state not in ('cancel','done'))" string="Move Lines" create="0" default_order="date">
                    <field name="date"/>
                    <field name="reference" string="Reference"/>
                    <field name="product_id"/>
                    <field name="location_id"/>
                    <field name="location_dest_id"/>
                    <field name="qty_done" string="Quantity Done"/>
                    <field name="product_uom_id" options="{'no_open': True, 'no_create': True}" string="Unit of Measure" groups="uom.group_uom"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <!-- end -->

        <!-- inherit field of mrp prodcution form view -->
        <record id="mrp_production_form_view" model="ir.ui.view">
            <field name="name">mrp.production.form</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_raw_ids']/tree/field[@name='needs_lots']" position="after">
                    <field name="qty_on_hand" string="Qty on hand"/>
                    <button name="go_to_product_move_line"
                            string="" 
                            type="object"
                            class="fa fa-external-link btn btn-secondary o_external_button" 
                            context="{'consume': False}"/>
                </xpath>
            </field>
        </record>
        <!-- end -->
    </data>
</odoo>
